---
import skillsJson from '../../resources/skills.json';
import SkillElement from './skill-group/SkillElement.astro';
import SkillsContainer from './skill-group/SkillsContainer.astro';
---

<section id="skills">
  <div class="skills-header">
    <h2>Skills</h2>
  </div>
  <div class="skill-container-list">
    {Object.values(skillsJson).map((skillGroup) => 
     <SkillsContainer title={skillGroup.title}>
      {
        Object.values(skillGroup.items).map((skill) => 
          <SkillElement title={skill.title} alt={skill.alt} image={skill.imgSrc}/>
        )
      }
    </SkillsContainer> 
    )}
  </div>
</section>

<style>
  #skills {
    margin-bottom: 1rem;
  }

  .skills-section {
    width: 100%;
    height: 100%;
  }

  .skills-header {
    margin-bottom: 2rem;
  }

  h2 {
    font-size: 36px;
    color: var(--text-color);
  }

  .skill-container-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(13rem, 1fr));
    grid-column-gap: 0px;
    grid-row-gap: 0px;
    gap: 1rem;
  }
</style>

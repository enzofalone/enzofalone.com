---
import { Image } from "astro:assets";
const { title, image, alt } = Astro.props;
---

<div class="skill-element">
  <Image class="skill-image img-crisp" width={30} height={30} src={image} alt={alt} loading={"lazy"} decoding={"async"}/>
  <span class="skill-title">{title}</p>
</div>

<style>
  .skill-element {
    display: flex;

    width: 100%;
    height: 56px;
    background-color: #263238;
  
    padding: 10px;
    border-radius: 5px;
  }

  .skill-title {
    color: var(--text-color);
    font-size: 20px;
    margin: auto 15px;
  }

  .skill-image {
    margin: auto 0;
    width: 32px;
    height: 100%;
    object-fit: contain;
  }
</style>
